        """Record an issue that was resolved."""
        self.metrics["issues_resolved_immediately"] += 1
        self.metrics["resolution_time"].append(resolution_time)
        self._update_prevention_rate()
    
    def record_issue_escalated(self, issue: Dict[str, Any]):
        """Record an issue that was escalated."""
        self.metrics["issues_escalated"] += 1
        self._update_escalation_rate()
    
    def _update_prevention_rate(self):
        """Update prevention rate."""
        total_issues = (
            self.metrics["issues_prevented"] + 
            self.metrics["issues_resolved_immediately"] + 
            self.metrics["issues_escalated"]
        )
        
        if total_issues > 0:
            self.metrics["prevention_rate"] = (
                self.metrics["issues_prevented"] / total_issues
            )
    
    def _update_escalation_rate(self):
        """Update escalation rate."""
        total_issues = (
            self.metrics["issues_prevented"] + 
            self.metrics["issues_resolved_immediately"] + 
            self.metrics["issues_escalated"]
        )
        
        if total_issues > 0:
            self.metrics["escalation_rate"] = (
                self.metrics["issues_escalated"] / total_issues
            )
    
    def generate_report(self) -> Dict[str, Any]:
