    "configurations": [
        {
            "name": "üöÄ Main Streamlit App",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "apps/streamlit_app.py",
                "--server.port",
                "8501",
                "--server.headless",
                "true"
            ],
            "python": "D:\\Anaconda\\python.exe",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "autoReload": {
                "enable": true
